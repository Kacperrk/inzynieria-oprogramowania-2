<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.demo.gui.controller.StudentController"
      spacing="10">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Lista studentów" style="-fx-font-size: 16px; -fx-font-weight: bold;" />

    <ListView fx:id="studentListView" prefHeight="200"/>

    <HBox spacing="10">
        <TextField fx:id="firstNameField" promptText="Imię"/>
        <TextField fx:id="lastNameField" promptText="Nazwisko"/>
        <Button text="Dodaj" onAction="#handleAddStudent"/>
    </HBox>

</VBox>
